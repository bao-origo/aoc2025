#!/usr/bin/env ruby
require_relative 'aoc'

dial = 50
count = 0
AOC.input(day=1).each_line do |line|
  line[1..].to_i.times do
    dial = if line[0] == 'L'
             dial == 0 ? 99 : dial - 1
           else # 'R'
             dial == 99 ? 0 : dial + 1
           end
    count += 1 if dial == 0
  end
end
puts count
