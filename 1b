#!/usr/bin/env ruby
require_relative 'aoc'

dial = 50
zero_count = 0
AOC.read(1).each_line do
  direction = it[0]
  count = it[1..].to_i

  case direction
  when 'L'
    count.times do
      dial -= 1
      if dial < 0
        dial = 99
      elsif dial == 0
        zero_count += 1
      end
    end
  when 'R'
    count.times do
      dial += 1
      if dial > 99
        dial = 0
        zero_count += 1
      elsif dial == 0
        zero_count += 1
      end
    end
  end
end

puts zero_count
